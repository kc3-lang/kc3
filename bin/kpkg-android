#!/bin/sh

set -e

export CC=aarch64-linux-android21-clang

export CXX=aarch64-linux-android21-clang++

export CPPFLAGS="-I/home/dx/kpkg/arch/aarch64-linux-android21/local/include"

export LDFLAGS="-L/home/dx/kpkg/arch/aarch64-linux-android21/local/lib"

CMD="$1"; shift

for PKG; do
	./bin/kpkg "$PKG" --arch aarch64-linux-android21 $CMD
done
