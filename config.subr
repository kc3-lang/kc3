    echo "/* generated by configure */" > "$OUT_C"
    echo "
#include <libkc3/types.h>
int main (void)
{
  sw s = 1;
  uw u = 1;
  return (_Generic(s,
                   s32:  s + 1,
                   s64:  s + 2,
                   sw:   0,
                   u32:  s + 3,
                   u64:  s + 4,
                   uw:   s + 5,
                   default: s + 6) +
