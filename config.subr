    echo >> ${LD_DEBUG}
    echo "$LINK > \"\$LOG\" 2>&1 || $LINK" >> ${LD_DEBUG}
    update_and_chmod 755 ${LD_DEBUG} .build_ld_debug

    echo "#!/bin/sh" >> ${LD_MAIN}
    echo "# gen by configure" >> ${LD_MAIN}
    echo "LOG=\".build/\$1.main.log\"" >> ${LD_MAIN}
    echo "CC=\"${CC}\"" >> ${LD_MAIN}
