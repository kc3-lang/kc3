set -e

bool() {
    case "$2" in
        false|no|0) eval "$1=false";;
        true|yes|1) eval "$1=true";;
        *)          echo "invalid bool $1 $2" >&2; exit 1
    esac
}

build_lib() {
    echo >> ${CONFIG_MK}
    echo "$LIB_ASAN: $OBJECTS_ASAN build_lib_asan" >> ${CONFIG_MK}
    echo "	./build_lib_asan $LIB_ASAN" >> ${CONFIG_MK}

    echo >> ${CONFIG_MK}
    echo "$LIB_COV: $OBJECTS_COV build_lib_cov" >> ${CONFIG_MK}
    echo "	./build_lib_cov $LIB_COV" >> ${CONFIG_MK}

    echo >> ${CONFIG_MK}
    echo "$LIB_DEBUG: $OBJECTS_DEBUG build_lib_debug" >> ${CONFIG_MK}
    echo "	./build_lib_debug $LIB_DEBUG" >> ${CONFIG_MK}

    echo >> ${CONFIG_MK}
    echo "$LIB: $OBJECTS build_lib_main" >> ${CONFIG_MK}
    echo "	./build_lib_main $LIB" >> ${CONFIG_MK}
}

build_lo() {
    build_lo_c
}

build_lo_c() {
    for S in $SOURCES; do
        SRC="${SRC_DIR}/${S}"

        echo >> ${CONFIG_MK}
        SRC_ASAN_LO="$(c2ext .asan.lo "$S")"
        c_ext_rule .asan.lo "$S" build_c_asan >> ${CONFIG_MK}
        echo "	./build_c_asan $SRC ${SRC_ASAN_LO}" >> ${CONFIG_MK}

        echo >> ${CONFIG_MK}
        SRC_COV_LO="$(c2ext .cov.lo "$S")"
        c_ext_rule .cov.lo "$S" build_c_cov >> ${CONFIG_MK}
        echo "	./build_c_cov $SRC $SRC_COV_LO" >> ${CONFIG_MK}

        echo >> ${CONFIG_MK}
        SRC_DEBUG_LO="$(c2ext .debug.lo "$S")"
        c_ext_rule .debug.lo "$S" build_c_debug >> ${CONFIG_MK}
        echo "	./build_c_debug $SRC $SRC_DEBUG_LO" >> ${CONFIG_MK}

        echo >> ${CONFIG_MK}
        SRC_LO="$(c2ext .main.lo "$S")"
        c_ext_rule .main.lo "$S" build_c_main >> ${CONFIG_MK}
        echo "	./build_c_main $SRC $SRC_LO" >> ${CONFIG_MK}
    done
}

