. ../../config.subr

echo "# sources.mk generated by update_sources" > ${SOURCES_MK}
echo "# sources.sh generated by update_sources" > ${SOURCES_SH}

HEADERS="$(ls *.h | sort)"
sources HEADERS "$HEADERS"

SOURCES="$(ls *.c | sort)"
sources SOURCES "$SOURCES"

update_sources_mk
update_sources_sh

( cd cairo && ./update_sources; )
( cd sdl2 && ./update_sources; )
