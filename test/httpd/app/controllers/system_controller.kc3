require Time

defmodule SystemController do

  def dashboard = fn (url) {
    slug = "system system-dashboard"
    title = "System dashboard"
    securelevel_str = "#{securelevel(0)}"
    uptime_str = Time.diff_to_str(Time.uptime())
    httpd_stats = %{requests: Counter.get(HTTPd.requests),
                     concurrent_requests: Counter.get(HTTPd.concurrent_requests),
                     connections: Counter.get(HTTPd.connections),
                     threads: HTTPd.thread_count()}
    page = SystemView.render_dashboard(securelevel_str, uptime_str, httpd_stats)
    body = SystemView.render_layout(slug, title, page, url)
    %HTTP.Response{body: body}
  }

  def route = fn (request) {
    dashboard(request.url)
  }

end
