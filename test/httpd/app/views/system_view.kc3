require EKC3

defmodule SystemView do

  def template_dashboard =
    EKC3.load("app/templates/system/dashboard.html.ekc3")

  def template_layout =
    EKC3.load("app/templates/system/layout.html.ekc3")
  
  def render_dashboard = fn (securelevel_str, uptime_str, requests) {
    EKC3.render(SystemView.template_dashboard)
  }
  
  def render_layout = fn (slug, title, page, url) {
    EKC3.render(SystemView.template_layout)
  }

end
