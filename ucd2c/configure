set -e

echo "$0"
export BUILD_TOP="$(dirname "$PWD")"
export DIR="$(basename $PWD)"
export SRC_TOP="$(dirname "$(cd "$(dirname "$0")" && pwd)")"

. "${SRC_TOP}/config.subr"

PROG=ucd2c

SOURCES="ucd2c.c"
echo "SOURCES = $SOURCES" >> ${CONFIG_MK}

OBJECTS="$(c2ext .main.lo "$SOURCES")"
echo "OBJECTS = $OBJECTS" >> ${CONFIG_MK}

# Default config
CPPFLAGS="${CPPFLAGS:=}"
ENV_CFLAGS="${CFLAGS:=}"
DEFAULT_CFLAGS="-O2 -pipe"
LDFLAGS="${LDFLAGS:=}"
LIBS="${LIBS:=}"

# Common config for all targets
CFLAGS="$CFLAGS -W -Wall -Werror -std=c99 -pedantic -O2"
config_i386
config_win32
config_win64
update_config_h
pkg_config libbsd-overlay

# Main config
if [ "x$ENV_CFLAGS" = "x" ]; then
    CFLAGS="$CFLAGS $DEFAULT_CFLAGS"
fi
CFLAGS="$CFLAGS -DNDEBUG"

echo "CPPFLAGS = $CPPFLAGS" >> ${CONFIG_MK}
echo "CFLAGS = $CFLAGS" >> ${CONFIG_MK}
echo "LDFLAGS = $LDFLAGS" >> ${CONFIG_MK}
echo "LIBS = $LIBS" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}

update_build
update_build_prog

build_lo
build_prog

update_config_mk

if [ "x$(dirname "$0")" != "x." ]; then
    cp ${SRC_DIR}/Makefile ./
fi
