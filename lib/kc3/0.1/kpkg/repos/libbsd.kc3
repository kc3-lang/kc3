defmodule Kpkg.Repos.LibBSD do

  Kpkg.defpackage(
    %Kpkg.Package{name: :libbsd,
                  build_depends_on: [],
                  default_branch: "master",
                  depends_on: [:libmd],
                  dir: "freedesktop.org/libbsd",
                  git: "https://git.kmx.io/kc3-lang/libbsd.git",
                  git_push: "git@git.kmx.io:kc3-lang/libbsd.git",
                  is_needed?: fn () {
                    ! Str.ends_with?(Kpkg.uname(), "BSD")
                  },
                  module: module()}
  )

end

