defmodule HTTP.Request do

  defstruct [method: ?,
             body: ?,
             url: "/",
             protocol: "HTTP/1.1",
             headers: []]

  dlopen(__DIR__ + "../http.so")

  def allowed_methods = [DELETE,
                         GET,
                         HEAD,
                         POST,
                         PUT]

  def buf_parse = cfn Tag "http_request_buf_parse" (Result, Buf)

  def buf_write = cfn Sw "http_request_buf_write" (HTTP.Request, Buf)

end
