set -e

echo "$PWD/configure"

SRC_TOP="$(dirname "$PWD")"

. "${SRC_TOP}/config.subr"

KC3_VERSION="$(cat "${SRC_TOP}/kc3.version")"
echo "KC3_VERSION = $KC3_VERSION" >> ${CONFIG_MK}

MACHINE=$(uname -m)
echo "MACHINE = $MACHINE" >> ${CONFIG_MK}

update_config_mk
update_config_sh
