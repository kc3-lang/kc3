#!/bin/sh
## kc3
## Copyright from 2022 to 2025 kmx.io <contact@kmx.io>
##
## Permission is hereby granted to use this software granted the above
## copyright notice and this permission paragraph are included in all
## copies and substantial portions of this software.
##
## THIS SOFTWARE IS PROVIDED "AS-IS" WITHOUT ANY GUARANTEE OF
## PURPOSE AND PERFORMANCE. IN NO EVENT WHATSOEVER SHALL THE
## AUTHOR BE CONSIDERED LIABLE FOR THE USE AND PERFORMANCE OF
## THIS SOFTWARE.

set -e

echo "$0"
export BUILD_TOP="$(dirname "$(dirname "$PWD")")"
export DIR="window/cairo"
export SRC_TOP="$(dirname "$(dirname "$(cd "$(dirname "$0")" && pwd)")")"

. "${SRC_TOP}/config.subr"

LIB=libkc3_window_cairo
LIB_ASAN=libkc3_window_cairo_asan
LIB_COV=libkc3_window_cairo_cov
LIB_DEBUG=libkc3_window_cairo_debug

echo "LIB = $LIB" >> ${CONFIG_MK}
echo "LIB_ASAN = $LIB_ASAN" >> ${CONFIG_MK}
echo "LIB_COV = $LIB_COV" >> ${CONFIG_MK}
echo "LIB_DEBUG = $LIB_DEBUG" >> ${CONFIG_MK}

# Common config for all targets
CPPFLAGS="$CPPFLAGS -DPIC"
CFLAGS="$CFLAGS -W -Wall -Werror -std=c11 -pedantic -pipe -fPIC"
OBJCFLAGS="$CFLAGS -W -Wall -Werror"
LDFLAGS="$LDFLAGS -rpath ${PREFIX}/lib"
config_asan
config_gnu
config_i386
config_have_f80
config_have_f128
config_win32
config_win64
pkg_config libbsd-overlay
pkg_config libffi
pkg_config libmd
pkg_config cairo
pkg_config cairo-ft
pkg_config cairo-quartz
pkg_config cairo-quartz-font
pkg_config freetype2
pkg_config xkbcommon
config_cocoa

. "${SRC_DIR}/sources.sh"

OBJECTS="$(c2ext .main.o "$SOURCES")"
if ${HAVE_COCOA}; then
    OBJECTS="$OBJECTS $(objc2ext .main.o "$OBJC_SOURCES")"
fi
OBJECTS_ASAN="$(c2ext .asan.o "$SOURCES")"
if ${HAVE_COCOA}; then
    OBJECTS_ASAN="$OBJECTS_ASAN $(objc2ext .asan.o "$OBJC_SOURCES")"
fi
OBJECTS_COV="$(c2ext .cov.o "$SOURCES")"
if ${HAVE_COCOA}; then
    OBJECTS_COV="$OBJECTS_COV $(objc2ext .cov.o "$OBJC_SOURCES")"
fi
OBJECTS_DEBUG="$(c2ext .debug.o "$SOURCES")"
if ${HAVE_COCOA}; then
    OBJECTS_DEBUG="$OBJECTS_DEBUG $(objc2ext .debug.o "$OBJC_SOURCES")"
fi

echo "OBJECTS = $OBJECTS" >> ${CONFIG_MK}
echo "OBJECTS_ASAN = $OBJECTS_ASAN" >> ${CONFIG_MK}
echo "OBJECTS_COV = $OBJECTS_COV" >> ${CONFIG_MK}
echo "OBJECTS_DEBUG = $OBJECTS_DEBUG" >> ${CONFIG_MK}

# Address Sanitizer config
CPPFLAGS_ASAN="$CPPFLAGS"
CFLAGS_ASAN="$CFLAGS -O1 -fsanitize=address -fno-omit-frame-pointer -g"
LIBASAN=$(${CC} -print-file-name=libasan.so)
LIBASAN_DIR=$(dirname "$LIBASAN")
LDFLAGS_ASAN="$LDFLAGS -L$LIBASAN_DIR -L../../libkc3 -L.."
LIBS_ASAN="$LIBS -lkc3_asan -lkc3_window_asan $(${CC} -print-file-name=libasan.so)"

# Coverage config
CPPFLAGS_COV="$CPPFLAGS"
CFLAGS_COV="$CFLAGS -ftest-coverage -fprofile-arcs -fprofile-generate"
LIBGCOV=$(${CC} -print-file-name=libgcov.a)
LIBGCOV_DIR=$(dirname "$LIBGCOV")
LDFLAGS_COV="$LDFLAGS -L$LIBGCOV_DIR -L../../libkc3 -L.."
LIBS_COV="$LIBS -lkc3_cov -lkc3_window_cov $(${CC} -print-file-name=libgcov.a)"

# Debug config
CPPFLAGS_DEBUG="$CPPFLAGS"
CFLAGS_DEBUG="$CFLAGS -DDEBUG -O0 -g"
LDFLAGS_DEBUG="$LDFLAGS -L../../libkc3 -L.."
LIBS_DEBUG="$LIBS -lkc3_debug -lkc3_window_debug"

# Main config
DEFAULT_CFLAGS="-O2 -fPIC"
if [ "x$ENV_CFLAGS" = "x" ]; then
    CFLAGS="$CFLAGS $DEFAULT_CFLAGS"
fi
CFLAGS="$CFLAGS -DNDEBUG"
LDFLAGS="$LDFLAGS -L../../libkc3"
LDFLAGS="$LDFLAGS -L../"
LIBS_LOCAL="-lkc3"
LIBS_LOCAL="$LIBS_LOCAL -lkc3_window"
LIBS="$LIBS $LIBS_LOCAL"

echo "LIB = $LIB" >> ${CONFIG_MK}
echo "HAVE_ASAN = $HAVE_ASAN" >> ${CONFIG_MK}
echo "CPPFLAGS = $CPPFLAGS" >> ${CONFIG_MK}
echo "CFLAGS = $CFLAGS" >> ${CONFIG_MK}
echo "LDFLAGS = $LDFLAGS" >> ${CONFIG_MK}
echo "LIBS = $LIBS" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}
echo "LIB_ASAN = $LIB_ASAN" >> ${CONFIG_MK}
echo "CFLAGS_ASAN = $CFLAGS_ASAN" >> ${CONFIG_MK}
echo "LDFLAGS_ASAN = $LDFLAGS_ASAN" >> ${CONFIG_MK}
echo "LIBS_ASAN = $LIBS_ASAN" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}
echo "LIB_COV = $LIB_COV" >> ${CONFIG_MK}
echo "CFLAGS_COV = $CFLAGS_COV" >> ${CONFIG_MK}
echo "LDFLAGS_COV = $LDFLAGS_COV" >> ${CONFIG_MK}
echo "LIBS_COV = $LIBS_COV" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}
echo "LIB_DEBUG = $LIB_DEBUG" >> ${CONFIG_MK}
echo "CFLAGS_DEBUG = $CFLAGS_DEBUG" >> ${CONFIG_MK}
echo "LDFLAGS_DEBUG = $LDFLAGS_DEBUG" >> ${CONFIG_MK}
echo "LIBS_DEBUG = $LIBS_DEBUG" >> ${CONFIG_MK}

update_build_c
update_build_objc
update_build_lib

build_o_c
build_o_objc
build_lib

if pkg-config cairo-xcb; then
    HAVE_XCB=true
else
    HAVE_XCB=false
fi
echo "HAVE_XCB = $HAVE_XCB" >> ${CONFIG_MK}

if pkg-config cairo-win32; then
    HAVE_WIN32=true
else
    HAVE_WIN32=false
fi
echo "HAVE_WIN32 = $HAVE_WIN32" >> ${CONFIG_MK}

update_config_mk
update_makefile
env_reset

SUBDIRS="demo"

if ${HAVE_COCOA}; then
    SUBDIRS="$SUBDIRS quartz"
fi

if ${HAVE_WIN32}; then
    SUBDIRS="$SUBDIRS win32"
fi

if ${HAVE_XCB}; then
    SUBDIRS="$SUBDIRS xcb"
fi

config_subdirs $SUBDIRS
