set -e

export SRC_TOP="$(pwd)"

: ${PREFIX:=/usr/local}
if [ "x$1" = "x--prefix" ]; then
    PREFIX="$2"
    shift 2
fi
export PREFIX

. ./config.subr

require_pkg_config

C3_VERSION="$(cat c3.version)"
echo "C3_VERSION = $C3_VERSION" >> ${CONFIG_MK}
echo "c3-${C3_VERSION}.tar.gz: $(tr '\n' ' ' < c3.index)" >> ${CONFIG_MK}

config_asan
echo "HAVE_ASAN = ${HAVE_ASAN}" >> ${CONFIG_MK}

update_config_mk
env_reset

config_subdirs libtommath ucd2c libc3 libc3_window ic3 c3s test
