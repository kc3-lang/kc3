## PURPOSE AND PERFORMANCE. IN NO EVENT WHATSOEVER SHALL THE
## AUTHOR BE CONSIDERED LIABLE FOR THE USE AND PERFORMANCE OF
## THIS SOFTWARE.

set -e

echo "$PWD/configure"

make -C runj
make -C sort

export SRC_TOP="$PWD"

: ${PREFIX:=/usr/local}
if [ "x$1" = "x--prefix" ]; then
    PREFIX="$2"
    shift 2
fi
export PREFIX

. "${SRC_TOP}/config.subr"

require_pkg_config

KC3_VERSION="$(cat kc3.version)"
echo "KC3_VERSION = $KC3_VERSION" >> ${CONFIG_MK}

config_asan
echo "HAVE_ASAN = ${HAVE_ASAN}" >> ${CONFIG_MK}

ARCH="unknown"
if uname | grep -iq openbsd; then
    ARCH=openbsd
elif uname | grep -iq bsd; then
    ARCH=bsd
elif uname | grep -q Linux; then
    ARCH=linux
elif uname | grep -q Darwin; then
    ARCH=darwin
elif uname -s | grep -qi mingw; then
    ARCH=windows
fi
echo "ARCH = $ARCH" >> ${CONFIG_MK}

update_config_mk
env_reset

config_subdirs \
    libtommath \
    ucd2c \
    libkc3 \
    ikc3 \
    kc3s \
    ekc3 \
    event \
    json \
    markdown \
    pdf \
    smtp \
    socket \
    tls \
    http \
    httpd \
    test \
    window \
    gtk4 \
    fs
