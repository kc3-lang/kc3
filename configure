## PURPOSE AND PERFORMANCE. IN NO EVENT WHATSOEVER SHALL THE
## AUTHOR BE CONSIDERED LIABLE FOR THE USE AND PERFORMANCE OF
## THIS SOFTWARE.

set -e

echo "$0"
export BUILD_TOP="$PWD"
export DIR="."
export SRC_TOP="$(cd "$(dirname "$0")" && pwd)"

: ${PREFIX:=/usr/local}
if [ "x$1" = "x--prefix" ]; then
    PREFIX="$2"
    shift 2
fi
export PREFIX

: ${LIBDIR:=}
if [ "x$1" = "x--libdir" ]; then
    LIBDIR="$2"
    shift 2
fi
if [ "x$LIBDIR" = "x" ]; then
    if [ -d "${PREFIX}/lib64" ]; then
        LIBDIR="${PREFIX}/lib64"
    else
        LIBDIR="${PREFIX}/lib"
    fi
fi
export LIBDIR

. "${SRC_TOP}/config.subr"

require_pkg_config

MACHINE=$(uname -m)
echo "MACHINE = $MACHINE" >> ${CONFIG_MK}
echo "MACHINE=$MACHINE" >> ${CONFIG_SH}

KC3_VERSION="$(cat "${SRC_TOP}/kc3.version")"
echo "KC3_VERSION = $KC3_VERSION" >> ${CONFIG_MK}
echo "KC3_VERSION=$KC3_VERSION" >> ${CONFIG_SH}

config_asan
echo "HAVE_ASAN = ${HAVE_ASAN}" >> ${CONFIG_MK}

ARCH="unknown"
if uname | grep -iq openbsd; then
    ARCH=openbsd
elif uname | grep -iq bsd; then
    ARCH=bsd
elif uname | grep -q Linux; then
    ARCH=linux
elif uname | grep -q Darwin; then
    ARCH=darwin
elif uname -s | grep -qi mingw; then
    ARCH=windows
fi
echo "ARCH = $ARCH" >> ${CONFIG_MK}

if pkg-config glesv2; then
    HAVE_GL=true
else
    HAVE_GL=false
fi
echo "HAVE_GL = $HAVE_GL" >> ${CONFIG_MK}

if pkg-config gtk4; then
    HAVE_GTK4=true
else
    HAVE_GTK4=false
fi
echo "HAVE_GTK4 = $HAVE_GTK4" >> ${CONFIG_MK}

update_config_sh
update_config_mk
update_makefile
env_reset

SUBDIRS="
ekc3
event
git
http
httpd
ikc3
image
json
kc3s
kpkg
libkc3
libtommath
markdown
pdf
qrencode
smtp
test
"

if [ "x$ARCH" = "xopenbsd" ]; then
    SUBDIRS="$SUBDIRS
kqueue"
fi

if $HAVE_GL; then
    SUBDIRS="$SUBDIRS
gl
window"
fi

if $HAVE_GTK4; then
    SUBDIRS="$SUBDIRS
gtk4"
fi

config_subdirs $SUBDIRS
